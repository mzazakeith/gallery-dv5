pipeline {

    agent any

    environment {
        DEPLOY_HOOK="https://api.render.com/deploy/srv-coem7pa0si5c739kscig?key=onL91qArcu0"

        LIVE_SITE = 'https://secret-shore-37984.herokuapp.com/'
    }

    tools {
            nodejs 'nodejs'
        }

    stages {
        stage ('Clone repository') {
            steps {
                git 'https://github.com/mzazakeith/gallery-dv5'
            }
        }


        stage('Build: Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage ('Test: Run tests') {
            steps {
                sh 'npm test'
            }
        }

        stage ('Deploy: Deploy to render') {
                steps {
                    script {
                        def response = sh(script: "curl -X POST ${DEPLOY_HOOK}", returnStdout: true).trim()
                        env.DEPLOY_ID = readJSON text: response.toString().trim().replace(/\\/,"")
                    }
                }
            }
    }

    post {
            success {
               echo "Build ${env.DEPLOY_ID} Succeeded. Deployed at ${LIVE_SITE}"
            }
            failure {
                slackSend color: "danger", message: "Build ${env.DEPLOY_ID} failed. See ${env.BUILD_URL} for details."
            }
        }
}
