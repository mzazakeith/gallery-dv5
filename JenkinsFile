pipeline {

    agent any

    tools {
            nodejs 'nodejs'
        }

    stages {
        stage ('Clone repository') {
            steps {
                git 'https://github.com/brianmarete/gallery.git'
            }
        }


        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage ('Run tests') {
            steps {
                sh 'npm test'
            }
        }


    }

