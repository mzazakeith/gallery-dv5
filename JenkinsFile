pipeline {

    agent any

    environment {
        DEPLOY_HOOK='https://api.render.com/deploy/srv-coem7pa0si5c739kscig?key=onL91qArcu0'

        LIVE_SITE = 'https://gallery-dv5.onrender.com'

    }

    tools {
            nodejs 'nodejs'
        }

    stages {
        stage ('Clone repository') {
            steps {
                git 'https://github.com/mzazakeith/gallery-dv5'
            }
        }


        stage('Build: Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage ('Test: Run tests') {
            steps {
                sh 'npm test'
            }
        }

        stage ('Deploy: Deploy to render') {
            steps {
             sh "curl -X POST ${DEPLOY_HOOK}"
            }
        }

    }

    post {
        success {
         slackSend color: "good", message: "JOB_NAME : ${env.JOB_NAME} -> Build Number: ${env.BUILD_NUMBER} Success. Deployed at ${env.LIVE_SITE} Build Url  See ${env.BUILD_URL}"
        }
        failure {
          slackSend color: "danger", message: "JOB_NAME : ${env.JOB_NAME} -> Build Number: ${env.BUILD_NUMBER} Failed. See ${env.BUILD_URL} for details."
        }
    }
}
